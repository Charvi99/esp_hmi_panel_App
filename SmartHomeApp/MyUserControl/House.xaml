<UserControl x:Class="SmartHomeApp.MyUserControl.House"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SmartHomeApp.MyUserControl"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="#E9E6E6">
    <Border Margin="10"
            Background="Transparent"
            CornerRadius="15">
        <Grid x:Name="mainGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="1.1*" />
            </Grid.ColumnDefinitions>
            <Border x:Name="mainPanel"
                    Grid.Column="0"
                    Margin="5"
                    CornerRadius="10"
                    Background="White">
                <Grid x:Name="roomGrid"
                      Margin="5">

                </Grid>
            </Border>
            <Border x:Name="roomPanel"
                    Grid.Column="0"
                    Margin="10,5"
                    CornerRadius="10"
                    Background="White">
                <Grid x:Name="itemGrid"
                      Margin="20,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0"
                               Text="LIGHTS"
                               Margin="-5,0"
                               VerticalAlignment="Center"
                               FontSize="14"
                               FontWeight="Medium"
                               Foreground="#A39C9C" />
                    <TextBlock Grid.Row="2"
                               Text="SOCKETS"
                               Margin="-5,0"
                               VerticalAlignment="Center"
                               FontSize="14"
                               FontWeight="Medium"
                               Foreground="#A39C9C" />
                    <TextBlock Grid.Row="4"
                               Text="EXTRA"
                               Margin="-5,0"
                               VerticalAlignment="Center"
                               FontSize="14"
                               FontWeight="Medium"
                               Foreground="#A39C9C" />
                </Grid>
            </Border>
            <Border x:Name="sidePanel"
                    Grid.Column="1"
                    Margin="5"
                    CornerRadius="10"
                    Background="White">

                <Grid>
                    <Grid x:Name="sidePanel_overview"
                          Visibility="Hidden">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="65" />
                            <RowDefinition Height="3*" />
                            <RowDefinition Height="3*" />
                            <RowDefinition Height="2*" />
                        </Grid.RowDefinitions>

                        <Border x:Name="Headder"
                                Grid.ColumnSpan="2"
                                CornerRadius="10,10,0,0"
                                Background="#B6D461" />
                        <TextBlock x:Name="RoomName"
                                   FontSize="30"
                                   Text="HOUSE"
                                   TextAlignment="Center"
                                   FontWeight="Bold"
                                   Grid.Row="0"
                                   Grid.ColumnSpan="2"
                                   Foreground="WhiteSmoke"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center" />
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*" />
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>

                            <Image x:Name="side_panel_bulb_img"
                                   Grid.Row="0"
                                   Margin="5"
                                   Source="/img/Bulb_b.png">
                            </Image>
                            <TextBlock x:Name="lightInfo"
                                       FontSize="30"
                                       Text="a"
                                       Grid.Row="1"
                                       Foreground="#A39C9C"
                                       VerticalAlignment="Stretch"
                                       TextAlignment="Center"
                                       HorizontalAlignment="Center" />

                        </Grid>
                        <Grid Grid.Row="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*" />
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>

                            <Image x:Name="side_panel_socket_img"
                                   Grid.Row="0"
                                   Margin=" 10"
                                   Source="/img/Socket_b.png">
                            </Image>
                            <TextBlock x:Name="socketInfo"
                                       FontSize="30"
                                       Text="b"
                                       Grid.Row="1"
                                       Foreground="#A39C9C"
                                       VerticalAlignment="Stretch"
                                       TextAlignment="Center"
                                       HorizontalAlignment="Center" />

                        </Grid>
                        <Border x:Name="CogBorder"
                                Grid.Column="1"
                                Grid.Row="3"
                                Margin="10"
                                CornerRadius="8"
                                Background="Transparent"
                                BorderBrush="#ddd8d8"
                                BorderThickness="2"
                                MouseDown="CogBorder_MouseDown">
                            <Image x:Name="cogIcon"
                                   Source="/img/cog.png">
                            </Image>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="BorderBrush"
                                            Value="#A39C9C" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver"
                                                 Value="True">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard HandoffBehavior="SnapshotAndReplace">
                                                    <Storyboard>
                                                        <ColorAnimation Duration="0:0:0.3"
                                                                        To="#A39C9C"
                                                                        Storyboard.TargetProperty="BorderBrush.Color" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                            <Trigger.ExitActions>
                                                <BeginStoryboard HandoffBehavior="SnapshotAndReplace">
                                                    <Storyboard>
                                                        <ColorAnimation Duration="0:0:0.3"
                                                                        To="#ddd8d8 "
                                                                        Storyboard.TargetProperty="BorderBrush.Color" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                    </Grid>

                    <Grid x:Name="sidePanel_settings"
                          Visibility="Hidden"
                          Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="65" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="40" />
                        </Grid.RowDefinitions>

                        <Border x:Name="Headder_settings"
                                CornerRadius="10,10,0,0"
                                Background="#B6D461" />
                        <TextBlock x:Name="RoomName_settings"
                                   FontSize="25"
                                   Text="SETTINGS"
                                   TextAlignment="Center"
                                   FontWeight="Bold"
                                   Grid.Row="0"
                                   Grid.ColumnSpan="2"
                                   Foreground="WhiteSmoke"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center" />

                        <Border x:Name="BorderAddRoom"
                                Grid.Row="1"
                                Margin="10"
                                CornerRadius="8"
                                Background="#A39C9C"
                                MouseDown="CreateNewRoom_MouseDown">
                            <TextBlock x:Name="AddRoomLabel"
                                       FontSize="20"
                                       Text="ADD ROOM"
                                       TextAlignment="Center"
                                       FontWeight="Bold"
                                       Grid.Row="0"
                                       Grid.ColumnSpan="2"
                                       Foreground="WhiteSmoke"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                        </Border>

                        <Border x:Name="BorderSave"
                                Grid.Row="3"
                                Margin="10,2"
                                CornerRadius="8"
                                Background="Transparent"
                                BorderBrush="#ddd8d8"
                                BorderThickness="2"
                                MouseDown="BorderSave_MouseDown">
                            <TextBlock x:Name="SaveLabel"
                                       FontSize="25"
                                       Text="SAVE"
                                       TextAlignment="Center"
                                       FontWeight="Normal"
                                       Grid.Row="0"
                                       Grid.ColumnSpan="2"
                                       Foreground="#A39C9C"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="BorderBrush"
                                            Value="Transparent" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver"
                                                 Value="True">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard HandoffBehavior="SnapshotAndReplace">
                                                    <Storyboard>
                                                        <ColorAnimation Duration="0:0:0.3"
                                                                        To="#A39C9C"
                                                                        Storyboard.TargetProperty="BorderBrush.Color" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                            <Trigger.ExitActions>
                                                <BeginStoryboard HandoffBehavior="SnapshotAndReplace">
                                                    <Storyboard>
                                                        <ColorAnimation Duration="0:0:0.3"
                                                                        To="#ddd8d8"
                                                                        Storyboard.TargetProperty="BorderBrush.Color" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                        <Border x:Name="BorderDiscard"
                                Grid.Row="4"
                                Margin="10,2"
                                CornerRadius="8"
                                Background="Transparent"
                                BorderThickness="2"
                                MouseDown="BorderDiscard_MouseDown">
                            <TextBlock x:Name="Discard_label"
                                       FontSize="25"
                                       Text="DISCARD"
                                       TextAlignment="Center"
                                       FontWeight="Normal"
                                       Grid.Row="0"
                                       Grid.ColumnSpan="2"
                                       Foreground="#A39C9C"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="BorderBrush"
                                            Value="Transparent" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver"
                                                 Value="True">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard HandoffBehavior="SnapshotAndReplace">
                                                    <Storyboard>
                                                        <ColorAnimation Duration="0:0:0.3"
                                                                        To="#A39C9C"
                                                                        Storyboard.TargetProperty="BorderBrush.Color" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                            <Trigger.ExitActions>
                                                <BeginStoryboard HandoffBehavior="SnapshotAndReplace">
                                                    <Storyboard>
                                                        <ColorAnimation Duration="0:0:0.3"
                                                                        To="Transparent"
                                                                        Storyboard.TargetProperty="BorderBrush.Color" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                    </Grid>

                    <Grid x:Name="sidePanel_room"
                          Margin="0,0,0,5"
                          Visibility="Hidden">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
